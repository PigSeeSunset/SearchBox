<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >


       <ImageView android:id="@+id/seach_left"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/search_left">
       </ImageView>
       <ImageView android:id="@+id/search_right"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:src="@drawable/search_right"
           android:layout_alignParentRight="true"
           android:layout_marginRight="1dp">
       </ImageView>
       <LinearLayout  android:layout_width="match_parent"
           android:layout_height="35dp"
           android:gravity="top"
           android:orientation="horizontal">
           <EditText android:id="@+id/search_text"
               android:layout_height="30dp"
               android:layout_width="fill_parent"
               android:layout_marginLeft="5dp"
               android:textStyle="bold"
               android:drawableLeft="@drawable/search_icon"
               android:singleLine="true"
               android:layout_marginRight="15dp"
               android:layout_weight="1.0"
               android:background="@null">
           </EditText>
           <Button android:id="@+id/search_cancel_button"
               android:layout_height="27dp"
               android:layout_width="wrap_content"
               android:text="取消"
               android:visibility="gone"
               android:layout_gravity="center_vertical"
               android:layout_marginRight="3dp"
               android:layout_marginTop="-3dp"
               android:background="@drawable/buttonradio"
               android:layout_alignParentRight="true">
           </Button>
       </LinearLayout>



</RelativeLayout>
